        </androidx.cardview.widget.CardView>

        <!-- Sunday -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp"
            android:backgroundTint="#E0F7FA">
            <LinearLayout
                android:orientation="vertical"
                android:padding="28dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sunday"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#00838F"
                    android:paddingBottom="12dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Breakfast: Poori Chhole" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Lunch: Rice &amp; Mutton" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Snacks: Dahi Bara Aloo Dum" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Dinner: Chicken Kasha" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
